                  span.form__checkbox-styled
                  span.form__checkbox-txt Архитектурный проект
              .form__control
                span.form__error
                label.form__checkbox-wrapper
                  input.form__checkbox(name="callback-mini-type" type="radio" data-form-type)
                  span.form__checkbox-styled
                  span.form__checkbox-txt Адаптация проекта
