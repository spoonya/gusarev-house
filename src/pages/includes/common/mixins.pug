mixin formCallback(titleArr, feature, formTxt, modificators={modifDisplay: null, modifReverse: null})
  section.form-callback
    .form-callback__titles.container(class= modificators.modifReverse)
      p.form-callback__feature= feature
      h2.form-callback__title
        span(class= modificators.modifDisplay)= titleArr[0]
        = titleArr[1]
    .form-content
      .container
        form#form-callback.form(method="POST", action="#")
          p.form__txt= formTxt
          .form__inner
            .form__group
              .form__control
                span.form__error
                input.form__input(name="callback-name" type="text" placeholder="Ваше имя" data-form-name)
              .form__control
                span.form__error
                input.form__input(name="callback-phone" type="text" placeholder="Ваш телефон" data-form-phone)
              .form__control
                span.form__error
                input.form__input(name="callback-email" type="text" placeholder="Ваш e-mail (необязательно)" data-form-email)
            .form__group
              .form__control.form__control--wide
                span.form__error
                input.form__input(name="callback-msg" maxlength="250" placeholder="Ваше сообщение (необязательно)" data-form-message)
              +submitButton("Перезвонить")
        .form-callback__img
          img.form-callback__img-phone.lozad(data-src="images/common/phone.png", width="780", height="842", alt="")
          img.form-callback__img-arrow.lozad(data-src="images/common/arrows.png", width="933", height="567", alt="")

