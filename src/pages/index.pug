extends common/layout

include includes/index/mixins

block content
  .page.page--paddingless
    main
      //Intro
      section.intro
        #swiper-intro.swiper-container
          .swiper-wrapper
            +introSlide('slide-1', 'Строительство домов под ключ в Минской области и Минском районе', ['Строим надёжные дома', 'из клееного бруса и массива сроком эксплуатации до 100 лет'], 'По индивидуальному или готовому проекту', ['Качественно', 'Долговечно', 'Доступно'])
            +introSlide('slide-1', 'Строительство домов под ключ в Минской области и Минском районе', ['Строим надёжные дома', 'из клееного бруса и массива сроком эксплуатации до 100 лет'], 'По индивидуальному или готовому проекту', ['Качественно', 'Долговечно', 'Доступно'])
          .intro__controllers
            p.intro__slides
              span#swiper-intro-current.intro__slides-current
              span.intro__slides-decorator /
              span#swiper-intro-total.intro__slides-total
            .swiper-pagination
            .swiper-button-next Вперёд
             picture.lozad
                source(srcset="images/index/intro/arrows-group.webp" type="image/webp")
                img.intro__decorator(src="images/index/intro/arrows-group.png", width="733", height="340",  alt="")

      //Company
      section.company
        .container
          .company__inner
            .company__images
              picture.lozad
                source(srcset="images/index/company/house.webp" type="image/webp")
                img.company__img(src="images/index/company/house.jpg" width="450" height="690" alt="Дом из древесины")
              .company__years.lozad(data-background-image-set=`url('images/index/company/texture-1.webp') 1x, url('images/index/company/texture-1.png') 2x`)
                p.company__years-txt
                  span 25
                  |лет на рынке
              .company__img-decorator.lozad(data-background-image-set=`url('images/index/company/texture-2.webp') 1x, url('images/index/company/texture-2.png') 2x`)
            .company__content
              h2.company__title Компания Gusarev House
              h3.company__subtitle
                |С 1995 года&nbsp;
                span строим&nbsp;
                |теплые и долговечные деревянные дома
              p.company__descrip Новейшие технологии позволяют нам конкурировать с любыми мировыми производителями
              p.company__txt Gusarev House — ведущая деревообрабатывающая и строительная компания. Компания Gusarev House более 25 лет занимается производством древесины, проектирует и строит деревянные дома из клееного бруса и массива, используя новейшие технологии обработки древесины.
              +linkButton('#', 'Подробнее о компании')

      //Fee
      section.fee
        ul.fee__list
          +feeItem('fee-1', ['Производство и строительство домов', 'из бруса под ключ'], '#')
          +feeItem('fee-2', ['Архитектурное проектирование', 'любого размера'], '#')

      //Catalog
